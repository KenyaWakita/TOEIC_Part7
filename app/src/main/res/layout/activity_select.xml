<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp">


        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:id="@+id/topic1"
                android:src="@drawable/unsolved_blue_1" />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:id="@+id/topic2"
                android:src="@drawable/unsolved_blue_2" />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:id="@+id/topic3"
                android:src="@drawable/unsolved_blue_3" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:id="@+id/topic4"
                android:src="@drawable/unsolved_blue_4" />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:id="@+id/topic5"
                android:src="@drawable/unsolved_blue_5" />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:id="@+id/topic6"
                android:src="@drawable/unsolved_blue_6" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:id="@+id/topic7"
                android:src="@drawable/unsolved_blue_7" />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:id="@+id/topic8"
                android:src="@drawable/unsolved_blue_8" />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:id="@+id/topic9"
                android:src="@drawable/unsolved_blue_9" />

        </TableRow>


    </TableLayout>

</LinearLayout>